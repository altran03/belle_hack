# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MOCK=0  # Set to 1 for mock mode during development

# GitHub OAuth App
GITHUB_CLIENT_ID=your_app_client_id
GITHUB_CLIENT_SECRET=your_app_client_secret
GITHUB_CALLBACK_URL=http://localhost:8000/api/auth/github/callback

# Webhook verification secret
GITHUB_WEBHOOK_SECRET=super-long-random-string-for-webhook-verification

# Session & app secrets
SESSION_SECRET=super-long-random-string-for-session-management

# Database (SQLite)
DATABASE_URL=sqlite:///./bugsniper.db

# TestSprite API
TESTSPRITE_API_KEY=your_testsprite_api_key
TESTSPRITE_MOCK=0  # Set to 1 for mock mode during development

# Webhook base URL (for ngrok or production)
WEBHOOK_BASE_URL=https://your-domain.com

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development
